<%- include('partials/header') -%>
<h1 class="text-center mt-5 mb-3">Login</h1>
<div class="container w-25">
    <%- include('partials/messages') -%>

    <form action="/login" method="POST">

        <div class="form-group px-0">
            <input type="email" name="email" class="form-control" placeholder="Email Address">
        </div>

        <div class="form-group px-0">
            <input type="password" name="password" class="form-control" placeholder="Password">
        </div>

        <button type="submit" class="btn btn-block btn-sm" style="background-color:#8a2be2;color:#ffff"><b>Login</b></button>
    </form>
    <p class="text-center my-2"><b>OR</b></p><hr>
    <a href="/signup" class="btn btn-block btn-sm" style="background-color:#8a2be2;color:#ffff"><b>Sign Up</b></a>
</div>


</div>

<%- include('partials/footer') -%>